<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="124dp"
        android:orientation="horizontal"
        android:weightSum="100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">


        <ImageView
            android:id="@+id/mainpagepic"
            android:layout_width="match_parent"
            android:layout_height="329dp"
            android:layout_weight="50"
            app:srcCompat="@drawable/mainpagepictures" />




    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="411dp"
        android:layout_height="78dp"
        android:layout_marginBottom="462dp"
        android:background="@drawable/rectangle_shape"
        android:orientation="horizontal"
        android:weightSum="100"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <Button
            android:id="@+id/homeButton"
            android:layout_width="23dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/vector" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="216dp"
            android:layout_height="47dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_weight="100"
            android:layout_marginLeft="15dp"


            android:textSize="20dp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="86dp"
        android:layout_marginBottom="19dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        >

        <RelativeLayout
            android:id="@+id/happyLayout"
            android:layout_width="80dp"
            android:layout_height="92dp"
            android:layout_marginStart="28dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.857">

            <ImageView
                android:id="@+id/rectGreen"
                android:layout_width="53.31dp"
                android:layout_height="59.62dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/rectangle_green" />

            <Button
                android:id="@+id/happy"
                android:layout_width="53.31dp"
                android:layout_height="59.62dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/happy"
                android:onClick="happyMood" />

            <TextView
                android:id="@+id/happyText"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="69dp"
                android:gravity="center"
                android:text="Happy"
                android:textSize="10dp"
                android:textStyle="bold"></TextView>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/calmLayout"
            android:layout_width="80dp"
            android:layout_height="92dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout2"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.857">

            <ImageView
                android:id="@+id/rectBlue"
                android:layout_width="53.31dp"
                android:layout_height="59.62dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/rectangle_blue" />

            <Button
                android:id="@+id/calm"
                android:layout_width="53.31dp"
                android:layout_height="56.62dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/calm"
                android:onClick="calmMood" />

            <TextView
                android:id="@+id/calmText"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="69dp"
                android:gravity="center"
                android:text="Calm"
                android:textSize="10dp"
                android:textStyle="bold"></TextView>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/manicLayout"
            android:layout_width="80dp"
            android:layout_height="92dp"

            app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.857">

            <ImageView
                android:id="@+id/rectPurple"
                android:layout_width="53.31dp"
                android:layout_height="59.62dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/rectangle_purple" />

            <Button
                android:id="@+id/manic"
                android:layout_width="53.31dp"
                android:layout_height="59.62dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/manic"
                android:onClick="manicMood" />

            <TextView
                android:id="@+id/manicText"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="69dp"
                android:gravity="center"
                android:text="Manic"
                android:textSize="10dp"
                android:textStyle="bold"></TextView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/angryLayout"
            android:layout_width="80dp"
            android:layout_height="92dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.857">

            <ImageView
                android:id="@+id/rectOrange"
                android:layout_width="53.31dp"
                android:layout_height="59.62dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/rectangle_red" />

            <Button
                android:id="@+id/angry"
                android:layout_width="53.31dp"
                android:layout_height="59.62dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/angry"
                android:onClick="angryMood" />

            <TextView
                android:id="@+id/angryText"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="69dp"
                android:gravity="center"
                android:text="Angry"
                android:textSize="10dp"
                android:textStyle="bold"></TextView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/sadLayout"
            android:layout_width="80dp"
            android:layout_height="92dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.857">

            <ImageView
                android:id="@+id/rectPink"
                android:layout_width="53.31dp"
                android:layout_height="59.62dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/rectangle_grebl" />

            <Button
                android:id="@+id/sad"
                android:layout_width="53.31dp"
                android:layout_height="59.62dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/sad"
                android:onClick="sadMood" />

            <TextView
                android:id="@+id/sadText"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="69dp"
                android:gravity="center"
                android:text="Sad"
                android:textSize="10dp"
                android:textStyle="bold"></TextView>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.072"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:layout_gravity="center"
            android:layout_marginTop="33dp"
            android:text="How was your day?"
            android:textAlignment="center"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></TextView>

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="411dp"
        android:layout_height="76dp"

        android:layout_gravity="bottom"
        android:layout_marginTop="52dp"
        android:background="#EAD1F4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:menu="@menu/bottom_navigation_bar">


    </com.google.android.material.bottomnavigation.BottomNavigationView>
</androidx.constraintlayout.widget.ConstraintLayout>


